@using Blue.Models;
@model List<Feature>
@{
    int count = 0;
}
<div class="row" style="margin-left:250px">
    <div class="col-sm-12">
        <div class="white-box">
            <h3 class="box-title">Feature</h3>
            <p class="text-muted">Add class <code>.table</code></p>
            <a asp-action="Create"><button class="btn btn-success">Create</button></a>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Setting</th>
                        </tr>
                    </thead>
                    @foreach(Feature item in Model){
                    <tbody>
                        <tr>
                            <td>@(++count)</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td> <img style="width:100px" src="~/assets/img/portfolio/@item.ImageName"></td>
                            <td>

                                    <a class="btn btn-primary" asp-action="Detail" asp-controller="Feature" asp-route-id="@item.Id" method="post">Detail</a>
                                    <a class="btn btn-primary" asp-action="Edit" asp-controller="Feature" asp-route-id="@item.Id" method="post">Edit</a>
                                    <form asp-action="Delete" asp-controller="Feature" asp-route-id="@item.Id" method="post">
                                       <button class="btn btn-danger">Delete</button>
                                    </form>
                            </td>
                        </tr>
                       
                    </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
