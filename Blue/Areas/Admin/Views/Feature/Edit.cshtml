@using Blue.ViewModels.FeatureVM;
@model FeatureEditVM
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">Profile page</h4>
            </div>
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <a href="https://wrappixel.com/templates/ampleadmin/" target="_blank" class="btn btn-danger pull-right m-l-20 hidden-xs hidden-sm waves-effect waves-light">Upgrade to Pro</a>
                <ol class="breadcrumb">
                    <li><a href="#">Dashboard</a></li>
                    <li class="active">Profile Page</li>
                </ol>
            </div>
        </div>
        <!-- /.row -->
        <!-- .row -->
        <div class="col-md-8 col-xs-12">
            <div class="white-box">
                <form class="form-horizontal form-material" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Title" class="col-md-12">Title</label>
                        <div class="col-md-12">
                            <input asp-for="Title" placeholder="Title" class="form-control form-control-line">
                        </div>
                        <span asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="col-md-12">Description</label>
                        <div class="col-md-12">
                            <input asp-for="Description" placeholder="Description" class="form-control form-control-line">
                        </div>
                        <span asp-validation-for="Description"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Image" class="col-md-12">Image</label>
                        <div class="col-md-12">
                            <input asp-for="Image" class="form-control form-control-line">
                        </div>
                        <span asp-validation-for="Image"></span>
                    </div>
                    <div class="form-group">
                        <img src="~/assets/img/portfolio/@Model.ImageName" style="width:300px" />

                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <button class="btn btn-success">Edit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->
